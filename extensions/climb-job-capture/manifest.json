{
  "manifest_version": 3,
  "name": "Climb Job Capture",
  "version": "1.0.0",
  "description": "One-click save from LinkedIn/Indeed/company pages to Climb Jobs Explorer + Saved Jobs.",
  "permissions": ["activeTab", "storage", "tabs"],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://*.indeed.com/*",
    "https://*.greenhouse.io/*",
    "https://*.lever.co/*",
    "https://climb-wheat.vercel.app/*",
    "http://localhost:3000/*",
    "http://127.0.0.1:3000/*"
  ],
  "action": {
    "default_title": "Capture job to Climb",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/jobs/*",
        "https://*.indeed.com/*",
        "https://*.greenhouse.io/*",
        "https://*.lever.co/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
